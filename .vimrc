set number
syntax on
set nobackup
set backspace=indent,eol,start
set ignorecase
set smartcase
set incsearch
set hlsearch
set showmatch matchtime=1
set showcmd
set listchars=tab:^\ ,trail:~
set history=1000
hi Comment ctermfg=3
set shiftwidth=4
set softtabstop=4
set tabstop=4
set showmatch
set smartindent
set noswapfile
set title
nnoremap <Esc><Esc> :nohlsearch<CR><ESC>

